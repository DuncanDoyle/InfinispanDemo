 <infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:infinispan:config:7.0 http://www.infinispan.org/schemas/infinispan-config-7.0.xsd"
	xmlns="urn:infinispan:config:7.0">

	<jgroups>
		<stack-file name="external-file" path="ispn-jgroups-tcp.xml"/>
	</jgroups>

	<cache-container default-cache="MyCoolCache">
		<transport stack="external-file"/>
		<serialization></serialization>
		<jmx></jmx>
		<distributed-cache name="MyCoolCache" owners="2" mode="SYNC">
			<eviction max-entries="10000"/>
			<compatibility/>
		</distributed-cache>
	</cache-container>
		
	
